{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Nouveau mot de passe{% endtrans %}
	| Futura solution partenaire
{% endblock %}

{% block body %}
	<div class="it-breadcrumb-area it-breadcrumb-bg">
		<div class="container">
			<div class="row ">
				<div class="col-md-12 mt-5">
					<div class="it-breadcrumb-content z-index-3 text-center">
						<div class="it-breadcrumb-title-box">
							<h3 class="it-breadcrumb-title">{% trans %}Nouveau mot de passe{% endtrans %}</h3>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

	<form method="post">


		<div class="container">

			<h1 class="h3 my-5 text-center">{% trans %}Création d'un nouveau mot de passe{% endtrans %}.</h1>

			<div class="row my-5">
				<div class="col-12 col-md-2"></div>
				<div class="col-12 col-md-8">

					<div class="card mb-5">

						<div class="card-body">
							<form method="post">
								<div class="mt-3">
									<label for="password">{% trans %}Nouveau Mot de Passe{% endtrans %}
										:</label>
									<input type="password" name="password" id="password" class="form-control" required autofocus>
								</div>

								<div class="mt-3">
									<input value="Crée un nouveau mot de passe" class="btn btn-lg btn-info" type="submit">
								</div>
							</form>
						</div>
					</div>
				</div>

				<div class="col-12 col-md-2"></div>
			</div>
		</div>
	</form>
{% endblock %}
