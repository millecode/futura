{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Programmes{% endtrans %}
	| Futura Solutions Partners
{% endblock %}

{% block body %}

	<div class="it-breadcrumb-area it-breadcrumb-bg">
		<div class="container">
			<div class="row ">
				<div class="col-md-12 mt-5">
					<div class="it-breadcrumb-content z-index-3 text-center">
						<div class="it-breadcrumb-title-box">
							<h3 class="it-breadcrumb-title">{% trans %}Programmes{% endtrans %}</h3>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>


	<!-- about-area-start -->
	<div class="it-about-area p-relative pt-185 pb-185">

		<div class="container">
			<div class="row align-items-center">
				<div class="col-xl-6 col-lg-6">
					<div class="it-about-thumb-box p-relative">

						<div class="it-about-main-thumb text-xl-end text-center">
							<img src="{{asset('assets/img/programme/1.jpg')}}" alt=""/>
						</div>


						<div class="it-about-shape-1 ">
							<img src="assets/img/about/shape-1-1.png" alt=""/>
						</div>


					</div>
				</div>
				<div class="col-xl-6 col-lg-6">
					<div class="it-about-right-box">
						<div class="it-about-title-box mb-20">
							<span class="it-section-subtitle">{% trans %}Notre programme{% endtrans %}</span>
							<h4 class="it-section-title">{% trans %}L'impact positif pour votre organisation{% endtrans %}</h4>
						</div>
						<div class="it-about-text pb-10">
							<p>
								{% trans %}Nous nous consacrons à donner aux organisations les moyens de réussir dans leurs domaines critiques, notamment la gestion de projets, l'égalité des sexes et l'inclusion sociale. Nos solutions personnalisées sont conçues pour aider nos partenaires à favoriser la réussite, la diversité et l'impact positif. Explorez nos services et voyez comment Futura Solution Partners peut aider votre organisation à prospérer{% endtrans %}.
							</p>
						</div>


					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- about-area-end -->


	<!-- feature-area-start -->
	<div class="it-feature-3-area it-feature-3-bg it-feature-3-style  pb-0">
		<div class="container">
			<h1 class="text-center">{% trans %}Nos Programmes{% endtrans %}</h1>
			<div class="row my-5">
				{% for programmes in programmes %}
					<div class="col-xl-4 col-lg-4 col-md-6 mb-30">
						<div class="it-feature-3-item mb-30 text-center">
							<div class="mb-3">
								<img src="{{asset('assets/img/programme/'~ programmes.image)}}" class="rounded img-fluid" alt="">
							</div>
							<div class="it-feature-3-content">
								<h4 class="it-feature-3-title">
									<a href="{{path('voir_programme',{'id':programmes.id,'slug':programmes.slug})}}">{{programmes.titre}}</a>
								</h4>
								<p>
									{{programmes.description|length > 110 ? programmes.description|slice(0, 110) ~ '...'}}
								</p>
								<a class="it-btn bg-secondary" href="{{path('voir_programme',{'id':programmes.id,'slug':programmes.slug})}}">
									<span>
										Voir la suite
										<svg width="17" height="14" viewbox="0 0 17 14" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M11 1.24023L16 7.24023L11 13.2402" stroke="white" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
											<path d="M1 7.24023H16" stroke="white" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
										</svg>
									</span>
								</a>
							</div>

						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</div>
	<!-- feature-area-end -->

{% endblock %}
