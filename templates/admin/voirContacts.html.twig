{% extends 'base.html.twig' %}

{% block title %}
	{{contact.nom}}
{% endblock %}

{% block body %}
	{% include 'admin/_menu.html.twig' %}


	<div class="my-3 text-center">
		<h2>Contact n°
			{{contact.id}}</h2>
		<h5>{{contact.nom}}</h5>
	</div>


	<div class="container">

		<div class="card my-5">
			<div class="card-body">
				<div class="row">
					<div class="col-md-6">
						<h5>{% trans %}Téléphone{% endtrans %}
							:</h5>
						<p>{{contact.phone}}</p>

						<h5>{% trans %}Date de contact{% endtrans %}
							:</h5>
						<p>{{contact.date|date('d/m/Y')}}</p>


						<h5>{% trans %}Email{% endtrans %}
							:</h5>
						<p>{{contact.email}}</p>


						<h5>{% trans %}Sujet de contact{% endtrans %}
							:</h5>
						<p>{{contact.sujet}}</p>
					</div>

					<div class="col-md-6">

						<h5>{% trans %}Message du contact{% endtrans %}
							:</h5>
						<p class="border border-1 rounded p-3">
							{{contact.message}}
						</p>

					</div>
				</div>
			</div>
		</div>

	</div>

{% endblock %}
